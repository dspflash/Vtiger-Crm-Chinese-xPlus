<GroupBox cols="xs12 sm6 md4" Multiline="0" Name="GBPGvtiger_projecttask"><Ctrls>
<Label Align="Right" Text="Records" Name="lb_Records" Size="60,20"/>
<TextBox Weight="30" ToolTip="ttp_records" Name="records_vtiger_projecttask" Size="40,20" OnLoad="init" readonly="1">
	<DbDetails fcsm="1">
<Index>projecttaskid</Index>
<DbTable>vtigercrm6.prj_ms_task_v v</DbTable>
<Data>count(*) records</Data>
<Order>projecttaskid</Order><Queryformat>select %{data} from (select v.projecttaskid from %{dbtable} %{where} GROUP BY v.projecttaskid  ORDER BY v.projecttaskid) t</Queryformat></DbDetails>
<OnEnchange>
<assign name="pgs_vtiger_projecttask" expr="js(Math.ceil(%{records_vtiger_projecttask}/%{vtiger_projecttask_vLst[countsperpage]}))"/>
<assign name="pgscb_vtiger_projecttask" expr="js('1~'+Math.ceil(%{records_vtiger_projecttask}/%{vtiger_projecttask_vLst[countsperpage]}))" function="setitems"/>
</OnEnchange>
</TextBox>

<TextBox Weight="30" ToolTip="ttp_pgs" Name="pgs_vtiger_salesorder_item" Size="30,20" readonly="1"/>
<TextBox Weight="30" ToolTip="ttp_pgcur" Name="pgcur_vtiger_salesorder_item" Size="30,20"/>
<Button Text="go2Page" Name="go2pagevtiger_salesorder_item_vLst" Size="50,20"><OnClick><submit next="vtiger_salesorder_item_vLst" function="GetPage(%{pgcur_vtiger_salesorder_item}-1)"/></OnClick></Button>
</Ctrls></GroupBox>

<GroupBox cols="xs12 sm6 md4" Multiline="0" Name="GBPGvtiger_projectstatus"><Ctrls>
<Label Align="Right" Text="Records" Name="lb_Records" Size="60,20"/>
<TextBox Weight="30" ToolTip="ttp_records" Name="records_vtiger_projectstatus" Size="30,20" OnLoad="init" readonly="1">
	<DbDetails fcsm="1">
<Index>projectstatusid</Index>
<DbTable>vtigercrm6.vtiger_projectstatus v</DbTable>
<Data>count(*) records</Data>
<Order>projectstatusid</Order><Queryformat>select %{data} from (select v.projectstatusid from %{dbtable} %{where} GROUP BY v.projectstatusid  ORDER BY v.projectstatusid) t</Queryformat></DbDetails>
<OnEnchange>
<assign name="pgs_vtiger_projectstatus" expr="js(Math.ceil(%{records_vtiger_projectstatus}/%{vtiger_projectstatus_vLst[countsperpage]}))"/>
<assign name="pgscb_vtiger_projectstatus" expr="js('1~'+Math.ceil(%{records_vtiger_projectstatus}/%{vtiger_projectstatus_vLst[countsperpage]}))" function="setitems"/>
</OnEnchange>
</TextBox>

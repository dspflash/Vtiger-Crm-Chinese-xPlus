<GroupBox cols="xs12 sm6 md4" Name="GBOPEvtiger_vendor" Size="100,100"><Ctrls>
<Button sqlpkinsert="vendorid" Text="create" ToolTip="ttp_createvtiger_vendor" Name="insertvtiger_vendor" Size="50,20">
<OnClick>
<DbDetails mode="insert" fcsm="1">
<DbTable>vtigercrm6.vtiger_vendor</DbTable>
<Required>%{dataRequired}</Required>
<Requireless>%{dataRequireless}</Requireless>
<Data>vendorname,phone,email,website,glacct,category,street,city,state,pobox,postalcode,country,description</Data>
<DataEx>vendor_no,created_by,creation_date,last_update_by,last_update_date;@odn,'%{user_id}',now(),'%{user_id}',now()</DataEx>
<queryFormat>SET @seq=0; SELECT SUBSTR(vendor_no,-5)+0 INTO @seq FROM vtigercrm6.vtiger_vendor ORDER BY vendor_no DESC LIMIT 0,1; SELECT CONCAT(Code_Prefix, LPAD((@seq + 1), 5, '0')) INTO @odn FROM vtigercrm6.xdoc_code WHERE docType='vendor'; INSERT INTO %{TABLE} %{DATA};</queryFormat></DbDetails>
<submit namelist="DbDetails"/><if cond="!%{insertvtiger_vendor[broke]}"><if cond="%{refreshAfterEdit}==1"><submit next="vtiger_vendorLst" delay="1000"/><elseif cond="%{refreshAfterEdit}==2"/><if cond="'%{frmwndctrl}'"><submit next="%{frmwndctrl}" delay="1000"/><else/><submit next="$parent.vtiger_vendor_vLst" delay="1000"/></if></if></if>
	</OnClick>
	</Button><TAB/>
<Button Text="modify" ToolTip="ttp_modifyvtiger_vendor" Name="modifyvtiger_vendor" Size="50,20">
<OnClick>
<DbDetails mode="update" fcsm="1">
<DbTable>vtigercrm6.vtiger_vendor</DbTable>
<Required>%{dataRequired}</Required>
<Requireless>%{dataRequireless}</Requireless>
<Data>vendorname,phone,email,website,glacct,category,street,city,state,pobox,postalcode,country,description</Data>
<DataEx>last_update_by,last_update_date;'%{user_id}',now()</DataEx>
<Where>vendorid='%{vendorid}'</Where>
<queryFormat>update %{table} set %{data} where %{where}</queryFormat></DbDetails>
<submit namelist="DbDetails"/><if cond="!%{modifyvtiger_vendor[broke]}"><if cond="%{refreshAfterEdit}==1"><submit next="vtiger_vendorLst" delay="1000"/><elseif cond="%{refreshAfterEdit}==2"/><if cond="'%{frmwndctrl}'"><submit next="%{frmwndctrl}" delay="1000"/><else/><submit next="$parent.vtiger_vendor_vLst" delay="1000"/></if></if></if>
	</OnClick>
</Button><TAB/>
<Button Text="reset" ToolTip="ttp_resetvtiger_vendor" Name="resetvtiger_vendor" Size="50,20">
<OnClick>
<submit next="GBDEDITvtiger_vendor" function="reset"/>
	</OnClick>
</Button><TAB/>
<Button Text="Search" ToolTip="ttp_gsearchvtiger_vendor" Name="gsearchvtiger_vendor" Size="50,20" visible="false">
<OnClick>
<search next="vtiger_vendorLst" listed="0" prefixwhere="0" prefixand="0" inputed="1"/><submit next="GBDEDITvtiger_vendor" namelist="search" function="search"/>
	</OnClick>
</Button><TAB/>
</Ctrls></GroupBox>
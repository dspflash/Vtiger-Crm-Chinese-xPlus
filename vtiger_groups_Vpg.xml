<TextBox Weight="30" ToolTip="ttp_pgs" Name="pgs_vtiger_groups" Size="30,20" readonly="1"/>
<TextBox Weight="30" ToolTip="ttp_pgcur" Name="pgcur_vtiger_groups" Size="30,20"/>
<Button Text="go2Page" Name="go2pagevtiger_groups_vLst" Size="50,20"><OnClick><submit next="vtiger_groups_vLst" function="GetPage(%{pgcur_vtiger_groups}-1)"/></OnClick></Button>
</Ctrls></GroupBox>

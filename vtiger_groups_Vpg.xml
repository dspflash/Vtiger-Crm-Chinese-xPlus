<GroupBox cols="xs12 sm6 md4" Multiline="0" Name="GBPGvtiger_groups"><Ctrls>
<Label Align="Right" Text="Records" Name="lb_Records" Size="60,20"/>
<TextBox Weight="30" ToolTip="ttp_records" Name="records_vtiger_groups" Size="30,20" OnLoad="init" readonly="1">
	<DbDetails fcsm="1">
<Index>groupid</Index>
<DbTable>vtigercrm6.vtiger_groups v</DbTable>
<Data>count(*) records</Data>
<Order>groupid</Order><Queryformat>select %{data} from (select v.groupid from %{dbtable} %{where} GROUP BY v.groupid  ORDER BY v.groupid) t</Queryformat></DbDetails>
<OnEnchange>
<assign name="pgs_vtiger_groups" expr="js(Math.ceil(%{records_vtiger_groups}/%{vtiger_groups_vLst[countsperpage]}))"/>
<assign name="pgscb_vtiger_groups" expr="js('1~'+Math.ceil(%{records_vtiger_groups}/%{vtiger_groups_vLst[countsperpage]}))" function="setitems"/>
</OnEnchange>
</TextBox>

<GroupBox cols="xs12 sm6 md4" Name="GBOPEvtiger_servicecontracts" Size="100,100"><Ctrls>
<Button sqlpkinsert="servicecontractsid" Text="create" ToolTip="ttp_createvtiger_servicecontracts" Name="insertvtiger_servicecontracts" Size="50,20">
<OnClick>
<DbDetails mode="insert" fcsm="1">
<DbTable>vtigercrm6.vtiger_servicecontracts</DbTable>
<Required>%{dataRequired}</Required>
<Requireless>%{dataRequireless}</Requireless>
<Data>subject,contract_type[contract_typeid],priority[contract_priorityid],start_date,end_date,due_date,sc_related_to[accountid],tracking_unit[service_usageunitid],total_units,used_units,planned_duration,actual_duration,contract_status,progress</Data>
<DataEx>contract_no,created_by,creation_date,last_update_by,last_update_date;@odn,'%{user_id}',now(),'%{user_id}',now()</DataEx>
<queryFormat>SET @seq=0; SELECT SUBSTR(contract_no,-5)+0 INTO @seq FROM vtigercrm6.vtiger_servicecontracts WHERE DATE(creation_date)=CURDATE() ORDER BY contract_no DESC LIMIT 0,1; SELECT generate_orderNo(Code_Prefix, DT_MODE, @seq,'','') INTO @odn FROM vtigercrm6.xdoc_code WHERE docType='contract'; insert into %{table} %{data};</queryFormat></DbDetails>
<submit namelist="DbDetails"/><if cond="!%{insertvtiger_servicecontracts[broke]}"><if cond="%{refreshAfterEdit}==1"><submit next="vtiger_servicecontractsLst" delay="1000"/><elseif cond="%{refreshAfterEdit}==2"/><if cond="'%{frmwndctrl}'"><submit next="%{frmwndctrl}" delay="1000"/><else/><submit next="$parent.vtiger_servicecontracts_vLst" delay="1000"/></if></if></if>
	</OnClick>
	</Button><TAB/>
<Button Text="modify" ToolTip="ttp_modifyvtiger_servicecontracts" Name="modifyvtiger_servicecontracts" Size="50,20">
<OnClick>
<DbDetails mode="update" fcsm="1">
<DbTable>vtigercrm6.vtiger_servicecontracts</DbTable>
<Required>%{dataRequired}</Required>
<Requireless>%{dataRequireless}</Requireless>
<Data>subject,contract_type[contract_typeid],priority[contract_priorityid],start_date,end_date,due_date,sc_related_to[accountid],tracking_unit[service_usageunitid],total_units,used_units,planned_duration,actual_duration,contract_status,progress</Data>
<DataEx>last_update_by,last_update_date;'%{user_id}',now()</DataEx>
<Where>servicecontractsid='%{servicecontractsid}'</Where>
<queryFormat>update %{table} set %{data} where %{where}</queryFormat></DbDetails>
<submit namelist="DbDetails"/><if cond="!%{modifyvtiger_servicecontracts[broke]}"><if cond="%{refreshAfterEdit}==1"><submit next="vtiger_servicecontractsLst" delay="1000"/><elseif cond="%{refreshAfterEdit}==2"/><if cond="'%{frmwndctrl}'"><submit next="%{frmwndctrl}" delay="1000"/><else/><submit next="$parent.vtiger_servicecontracts_vLst" delay="1000"/></if></if></if>
	</OnClick>
</Button><TAB/>
<Button Text="reset" ToolTip="ttp_resetvtiger_servicecontracts" Name="resetvtiger_servicecontracts" Size="50,20">
<OnClick>
<submit next="GBDEDITvtiger_servicecontracts" function="reset"/>
	</OnClick>
</Button><TAB/>
<Button Text="Search" ToolTip="ttp_gsearchvtiger_servicecontracts" Name="gsearchvtiger_servicecontracts" Size="50,20" visible="false">
<OnClick>
<search next="vtiger_servicecontractsLst" listed="0" prefixwhere="0" prefixand="0" inputed="1"/><submit next="GBDEDITvtiger_servicecontracts" namelist="search" function="search"/>
	</OnClick>
</Button><TAB/>
</Ctrls></GroupBox>
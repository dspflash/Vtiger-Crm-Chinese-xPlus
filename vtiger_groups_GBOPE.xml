<GroupBox cols="xs12 sm6 md4" Name="GBOPEvtiger_groups" Size="100,100"><Ctrls>
<Button sqlpkinsert="groupid" Text="create" ToolTip="ttp_createvtiger_groups" Name="insertvtiger_groups" Size="50,20">
<OnClick>
<DbDetails mode="insert" fcsm="1">
<DbTable>vtigercrm6.vtiger_groups</DbTable>
<Required>%{dataRequired}</Required>
<Requireless>%{dataRequireless}</Requireless>
<Data>groupname,description</Data>
<DataEx/>

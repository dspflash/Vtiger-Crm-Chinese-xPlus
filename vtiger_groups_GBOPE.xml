<submit namelist="DbDetails"/><if cond="!%{insertvtiger_groups[broke]}"><if cond="%{refreshAfterEdit}==1"><submit next="vtiger_groupsLst" delay="1000"/><elseif cond="%{refreshAfterEdit}==2"/><if cond="'%{frmwndctrl}'"><submit next="%{frmwndctrl}" delay="1000"/><else/><submit next="$parent.vtiger_groups_vLst" delay="1000"/></if></if></if>
	</OnClick>
	</Button><TAB/>
<Button Text="modify" ToolTip="ttp_modifyvtiger_groups" Name="modifyvtiger_groups" Size="50,20">
<OnClick>
<DbDetails mode="update" fcsm="1">
<DbTable>vtigercrm6.vtiger_groups</DbTable>
<Required>%{dataRequired}</Required>
<Requireless>%{dataRequireless}</Requireless>
<Data>groupname,description</Data>
<DataEx/>
<Where>groupid='%{groupid}'</Where>
<queryFormat>update %{table} set %{data} where %{where}</queryFormat></DbDetails>
<submit namelist="DbDetails"/><if cond="!%{modifyvtiger_groups[broke]}"><if cond="%{refreshAfterEdit}==1"><submit next="vtiger_groupsLst" delay="1000"/><elseif cond="%{refreshAfterEdit}==2"/><if cond="'%{frmwndctrl}'"><submit next="%{frmwndctrl}" delay="1000"/><else/><submit next="$parent.vtiger_groups_vLst" delay="1000"/></if></if></if>
	</OnClick>
</Button><TAB/>
<Button Text="reset" ToolTip="ttp_resetvtiger_groups" Name="resetvtiger_groups" Size="50,20">
<OnClick>
<submit next="GBDEDITvtiger_groups" function="reset"/>
	</OnClick>
</Button><TAB/>
<Button Text="Search" ToolTip="ttp_gsearchvtiger_groups" Name="gsearchvtiger_groups" Size="50,20" visible="false">
<OnClick>
<search next="vtiger_groupsLst" listed="0" prefixwhere="0" prefixand="0" inputed="1"/><submit next="GBDEDITvtiger_groups" namelist="search" function="search"/>
	</OnClick>
</Button><TAB/>
</Ctrls></GroupBox>
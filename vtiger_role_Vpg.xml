<TextBox Weight="30" ToolTip="ttp_pgs" Name="pgs_vtiger_role" Size="30,20" readonly="1"/>
<TextBox Weight="30" ToolTip="ttp_pgcur" Name="pgcur_vtiger_role" Size="30,20"/>
<Button Text="go2Page" Name="go2pagevtiger_role_vLst" Size="50,20"><OnClick><submit next="vtiger_role_vLst" function="GetPage(%{pgcur_vtiger_role}-1)"/></OnClick></Button>
</Ctrls></GroupBox>

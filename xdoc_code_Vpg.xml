<GroupBox cols="xs12 sm6 md4" Multiline="0" Name="GBPGxdoc_code"><Ctrls>
<Label Align="Right" Text="Records" Name="lb_Records" Size="60,20"/>
<TextBox Weight="30" ToolTip="ttp_records" Name="records_xdoc_code" Size="30,20" OnLoad="init" readonly="1">
	<DbDetails fcsm="1">
<Index>idx</Index>
<DbTable>vtigercrm6.xdoc_code x</DbTable>
<Data>count(*) records</Data>
<Order>idx</Order><Queryformat>select %{data} from (select x.idx from %{dbtable} %{where} GROUP BY x.idx  ORDER BY x.idx) t</Queryformat></DbDetails>
<OnEnchange>
<assign name="pgs_xdoc_code" expr="js(Math.ceil(%{records_xdoc_code}/%{xdoc_code_vLst[countsperpage]}))"/>
<assign name="pgscb_xdoc_code" expr="js('1~'+Math.ceil(%{records_xdoc_code}/%{xdoc_code_vLst[countsperpage]}))" function="setitems"/>
</OnEnchange>
</TextBox>

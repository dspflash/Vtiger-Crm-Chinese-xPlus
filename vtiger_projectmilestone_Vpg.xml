<GroupBox cols="xs12 sm6 md4" Multiline="0" Name="GBPGvtiger_projectmilestone"><Ctrls>
<Label Align="Right" Text="Records" Name="lb_Records" Size="60,20"/>
<TextBox Weight="30" ToolTip="ttp_records" Name="records_vtiger_projectmilestone" Size="40,20" OnLoad="init" readonly="1">
	<DbDetails fcsm="1">
<Index>projectmilestoneid</Index>
<DbTable>vtigercrm6.vtiger_projectmilestone v left join vtigercrm6.vtiger_projectmilestonetype v0 on v.projectmilestonetype=v0.projectmilestonetypeid left join vtigercrm6.vtiger_users v1 on v.created_by=v1.id left join vtigercrm6.vtiger_users v2 on v.last_update_by=v2.id</DbTable>
<Data>count(*) records</Data>
<Order>projectmilestoneid</Order><Queryformat>select %{data} from (select v.projectmilestoneid from %{dbtable} %{where} GROUP BY v.projectmilestoneid  ORDER BY v.projectmilestoneid) t</Queryformat></DbDetails>
<OnEnchange>
<assign name="pgs_vtiger_projectmilestone" expr="js(Math.ceil(%{records_vtiger_projectmilestone}/%{vtiger_projectmilestone_vLst[countsperpage]}))"/>
<assign name="pgscb_vtiger_projectmilestone" expr="js('1~'+Math.ceil(%{records_vtiger_projectmilestone}/%{vtiger_projectmilestone_vLst[countsperpage]}))" function="setitems"/>
</OnEnchange>
</TextBox>

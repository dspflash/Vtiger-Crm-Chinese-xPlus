	<DbDetails fcsm="1">
<Index>idx</Index>
<DbTable>vtigercrm6.vtiger_user2role v left join vtigercrm6.vtiger_role v0 on v.roleid=v0.roleidx</DbTable>
<Data>count(*) records</Data>
<Order>userid,idx</Order><Queryformat>select %{data} from (select v.idx from %{dbtable} %{where} GROUP BY v.idx  ORDER BY v.idx) t</Queryformat></DbDetails>
<OnEnchange>
<assign name="pgs_vtiger_user2role" expr="js(Math.ceil(%{records_vtiger_user2role}/%{vtiger_user2role_vLst[countsperpage]}))"/>
<assign name="pgscb_vtiger_user2role" expr="js('1~'+Math.ceil(%{records_vtiger_user2role}/%{vtiger_user2role_vLst[countsperpage]}))" function="setitems"/>
</OnEnchange>
</TextBox>
